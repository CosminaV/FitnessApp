<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoveWave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MoveWave.BackgroundImageStyle">
        <item name="android:windowBackground">@drawable/registerbg2</item>
    </style>

    <style name="Theme.MoveWave.BackgroundImageAddTrainingStyle">
        <item name="android:windowBackground">@drawable/onboarding1</item>
    </style>

    <style name="Theme.MoveWave.WaterTrackerBackground">
        <item name="android:windowBackground">@drawable/doublepinkwaterwave</item>
    </style>

</resources>