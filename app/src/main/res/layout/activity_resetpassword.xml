<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <EditText
        android:id="@+id/etNewPwd"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittext_background"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/etNewPwd"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorProcent10"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableEnd="@drawable/ic_baseline_visibility_24"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveNewPwd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_degrade_bg"
        android:text="@string/btnSaveNewPad"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/etNewPwd"
        app:layout_constraintStart_toStartOf="@+id/etNewPwd"
        app:layout_constraintTop_toBottomOf="@+id/etNewPwd" />
</androidx.constraintlayout.widget.ConstraintLayout>