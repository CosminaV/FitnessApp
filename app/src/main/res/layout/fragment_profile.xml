<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lila">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/purple_blob" />

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="35dp"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorProcent10"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvUserEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorProcent10"
                                    app:layout_constraintEnd_toEndOf="@+id/tvUserName"
                                    app:layout_constraintStart_toStartOf="@+id/tvUserName"
                                    app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="20dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginEnd="30dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tvUserEmail">

                                        <ScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/btnMyReminders"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="32dp"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="32dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/button_ripple_effect_bej"
                                                    android:drawablePadding="20dp"
                                                    android:text="@string/tvMyReminders"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    android:paddingStart="20dp"
                                                    style="@android:style/Widget.Button"
                                                    android:textAlignment="viewStart" />

                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/btnVeziDateleMele"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="32dp"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="32dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/button_ripple_effect_bej"
                                                    android:drawablePadding="20dp"
                                                    android:text="@string/btnVeziDateleMele"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    android:paddingStart="20dp"
                                                    style="@android:style/Widget.Button"
                                                    android:textAlignment="viewStart" />

                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/btnMyWorkoutStatistics"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="32dp"
                                                    android:layout_marginTop="10dp"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    style="@android:style/Widget.Button"
                                                    android:layout_marginEnd="32dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/button_ripple_effect_bej"
                                                    android:paddingStart="20dp"
                                                    android:text="@string/btnMyWorkoutStatistics"
                                                    android:textAlignment="viewStart" />

                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/btnWaterTracker"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="32dp"
                                                    android:layout_marginTop="10dp"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    style="@android:style/Widget.Button"
                                                    android:layout_marginEnd="32dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/button_ripple_effect_bej"
                                                    android:paddingStart="20dp"
                                                    android:text="@string/btnWaterTracker"
                                                    android:textAlignment="viewStart" />

                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/btnFeedback"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="32dp"
                                                    android:layout_marginTop="10dp"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    style="@android:style/Widget.Button"
                                                    android:layout_marginEnd="32dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/button_ripple_effect_bej"
                                                    android:paddingStart="20dp"
                                                    android:text="@string/btnFeedback"
                                                    android:textAlignment="viewStart" />

                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/btnLogout"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="32dp"
                                                    android:layout_marginTop="10dp"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"
                                                    style="@android:style/Widget.Button"
                                                    android:layout_marginEnd="32dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:background="@drawable/button_ripple_effect_bej"
                                                    android:paddingStart="20dp"
                                                    android:text="@string/btnLogout"
                                                    android:textAlignment="viewStart" />
                                        </LinearLayout>
                                        </ScrollView>
                                </androidx.cardview.widget.CardView>


                        </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>